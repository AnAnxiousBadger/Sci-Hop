{
	"manifest_version": 2,

	"name": "Sci-Hop-DEV",
	"description": "Open quickly the current article on Sci-hub",
	"version": "1.2",
	"background": {
		"scripts": ["background.js"]
	},

	"permissions": ["tabs", "commands", "contextMenus"],
	"browser_action": {
		"default_icon": "sci_hop_icon.png",
		"default_title": "SCI HOP!"
	},
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            }
        }
    },
	"content_scripts": [{
	  "matches": ["<all_urls>"],
	  "js": ["content.js"]
	}],
	"icons": {
		"16": "sci_hop_icon_small.png"
	}
}