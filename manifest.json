{
	"manifest_version": 3,

	"name": "Sci-Hop-DEV",
	"description": "Open quickly the current article on Sci-hub",
	"version": "2.0",

	"permissions": ["tabs", "contextMenus", "scripting"],

	"host_permissions": [
    	"<all_urls>"
  	],

	"action": {
		"default_icon": "sci_hop_icon.png",
		"default_title": "SCI HOP!"
	},

	"background": {
    	"service_worker": "background.js"
  	},

    "commands": {
        "sci_hop": {
            "suggested_key": {
                "windows": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
			"description": "Sci-hop current URL"
        }
    },

	"content_scripts": [{
	  "matches": ["<all_urls>"],
	  "js": ["content.js", "utils.js"]
	}],

	"web_accessible_resources": [
	{
		"resources": [
			"utils.js",
			"popups/sci_hop_popup.html",
			"popups/style.css",
			"popups/on_sci_hub_popup.js",
			"popups/on_publisher_popup.js",
			"icons/copy_icon.svg",
			"icons/new_tab_icon.svg",
			"icons/close_icon.svg",
			"sci_hop_icon.png"
		],
		"matches": ["<all_urls>"]
	}
  	],

	"icons": {
		"16": "sci_hop_icon_small.png"
	}
}